// Increased vertical padding for more whitespace (py-24 -> py-28/32)
const Section = ({ children, className = "", id = "" }) => (
    <section id={id} className={`py-20 md:py-32 px-6 md:px-12 lg:px-24 ${className}`}>
        <div className="max-w-7xl mx-auto">
            {children}
        </div>
    </section>
);

const Heading1 = ({ children, className = "" }) => (
    <h1 className={`font-serif text-4xl md:text-5xl lg:text-6xl font-bold text-[${BrandColors.slate900}] leading-[1.15] tracking-tight ${className}`} style={{ fontFamily: '"Libre Baskerville", serif' }}>
        {children}
    </h1>
);

const Heading2 = ({ children, className = "" }) => (
    <h2 className={`font-serif text-3xl md:text-4xl font-semibold text-[${BrandColors.slate900}] leading-tight mb-6 ${className}`} style={{ fontFamily: '"Libre Baskerville", serif' }}>
